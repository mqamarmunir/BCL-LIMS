            obj_reporting.ConsultantID = Request.QueryString["Consultant"].ToString().Trim();
        }

        obj_reporting.Datefrom = Request.QueryString["datefrom"].ToString().Trim();
        obj_reporting.Dateto = Request.QueryString["dateto"].ToString().Trim();

